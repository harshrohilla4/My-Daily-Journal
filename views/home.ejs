<%-include("partials/header")-%>
    <h1>Home</h1>
    <p><%=content%></p>
    
 <% postlist.forEach(function(post){ %>
       <h2><%=post.Posttitle%></h2>
     <%  if(post.Postbody.length>150){ %>
       <p><%=post.Postbody.substring(0,150)+"..."%><a href="/posts/<%=post._id%>">Read More</a></p>
     <%  }else { %>
             <p><%=post.Postbody+" "%><a href="/posts/<%=post._id%>">Go to page</a></p>
     <%  }  %>
       
 <% }); %>

<%-include("partials/footer") -%>   